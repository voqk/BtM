@page "/workouts"
@using Microsoft.AspNetCore.Authorization
@using BtM.Data
@using BtM.Services
@attribute [Authorize]
@inject WorkoutSessionService SessionService
@inject WorkoutPlanService PlanService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Workouts</PageTitle>

<h1>Workouts</h1>

@if (_activeSession is not null)
{
    <div class="alert alert-warning d-flex justify-content-between align-items-center">
        <div>
            <strong>Active workout:</strong> @_activeSession.WorkoutPlanName
            <span class="ms-2 text-muted">Started @_activeSession.StartedAt.ToLocalTime().ToString("g")</span>
        </div>
        <button class="btn btn-warning" @onclick="ContinueWorkout">Continue Workout</button>
    </div>
}

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">Quick Start</h5>
            </div>
            <div class="card-body">
                @if (_plans is null)
                {
                    <p><em>Loading...</em></p>
                }
                else if (_plans.Count == 0)
                {
                    <p class="text-muted">No workout plans yet.</p>
                    <a href="/plans" class="btn btn-primary">Create a Plan</a>
                }
                else
                {
                    <div class="list-group">
                        @foreach (var plan in _plans.Take(5))
                        {
                            <button class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                                    @onclick="() => StartWorkout(plan.Id)"
                                    disabled="@(_activeSession is not null)">
                                <span>@plan.Name</span>
                                <span class="badge bg-secondary">@plan.PlanExercises.Count exercises</span>
                            </button>
                        }
                    </div>
                    @if (_plans.Count > 5)
                    {
                        <a href="/plans" class="btn btn-link mt-2">View all plans</a>
                    }
                }
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Workouts</h5>
                <a href="/history" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                @if (_recentSessions is null)
                {
                    <p><em>Loading...</em></p>
                }
                else if (_recentSessions.Count == 0)
                {
                    <p class="text-muted">No completed workouts yet.</p>
                }
                else
                {
                    <div class="list-group">
                        @foreach (var session in _recentSessions)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <strong>@session.WorkoutPlanName</strong>
                                    <span class="text-primary">@FormatTonnage(session.TonnageLbs)</span>
                                </div>
                                <small class="text-muted">@session.StartedAt.ToLocalTime().ToString("MMM d, yyyy")</small>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Manage</h5>
            </div>
            <div class="card-body">
                <a href="/exercises" class="btn btn-outline-primary me-2">Exercises</a>
                <a href="/plans" class="btn btn-outline-primary me-2">Workout Plans</a>
                <a href="/history" class="btn btn-outline-primary">History</a>
            </div>
        </div>
    </div>
</div>

@code {
    private WorkoutSession? _activeSession;
    private List<WorkoutPlan>? _plans;
    private List<WorkoutSession>? _recentSessions;
    private string? _userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        _userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (_userId is not null)
        {
            _activeSession = await SessionService.GetActiveSessionAsync(_userId);
            _plans = await PlanService.GetUserPlansAsync(_userId);
            var allSessions = await SessionService.GetUserSessionsAsync(_userId, 5);
            _recentSessions = allSessions.Where(s => s.CompletedAt.HasValue).ToList();
        }
    }

    private void ContinueWorkout()
    {
        if (_activeSession is not null)
        {
            Navigation.NavigateTo($"/workout/{_activeSession.Id}");
        }
    }

    private void StartWorkout(Guid planId)
    {
        Navigation.NavigateTo($"/workout/start/{planId}");
    }

    private static string FormatTonnage(decimal tonnage)
    {
        if (tonnage >= 2000)
        {
            return $"{tonnage / 2000:F2} tons";
        }
        return $"{tonnage:N0} lbs";
    }
}
